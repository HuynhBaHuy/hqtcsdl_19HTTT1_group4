    <!--**********************************
        Content body start
    ***********************************-->
    <div class="content-body">
        <div class="container-fluid">
            <div class="row page-titles mx-0">
                <div class="col-sm-6 p-md-0">
                    <div class="welcome-text">
                        <h4>Hi! Welcome back</h4>
                    </div>
                </div>
            </div>
            <!-- row -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title title-custom">Danh sách đơn hàng</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered verticle-middle table-responsive-sm">
                                    <thead>
                                        <tr>
                                            <th class="id-col" scope="col">Mã đơn hàng</th>
                                            <th class="customer-name-col" scope="col">Tên khách hàng</th>
                                            <th class="address-col" scope="col">Địa chỉ giao hàng</th>
                                            <th class="price-col" scope="col">Tổng phí sản phẩm</th>
                                            <th class="status-col" scope="col">Tình trạng đơn hàng</th>
                                            <th class="action-col" scope="col"></th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-body">
                                        {{#each order}}
                                        <tr>
                                            <td>
                                                <div class="id-col">{{id}}</div>
                                            </td>
                                            <td>
                                                <div class="customer-name-col">{{customerName}}</div>
                                            </td>
                                            <td>
                                                <div class="address-col">{{address}}</div>
                                            </td>
                                            <td>
                                                <div class="price-col">{{totalPrice}}</div>
                                            </td>
                                            <td>
                                                <div class="status-col">{{status}}</div>
                                            </td>
                                            <td>
                                                <div class="action-col">
                                                    <button type="button" id="accept-order-btn" class="mr-4 btn btn-primary" data-id={{id}}
                                                        title="accept-order">Chấp nhận đơn hàng</button>
                                                </div>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Success Modal HTML -->
        <div id="accept-order-success-modal" class="modal fade">
            <div class="modal-dialog modal-confirm">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="icon-box">
                            <i class="fa fa-check"></i>
                        </div>				
                        <h4  class="modal-title w-100 title"></h4>	
                    </div>
                    <div class="modal-body">
                        <div class="text-center message"></div>
                    </div>
                    <div class="modal-footer">
                        <button id="success-modal-btn" class="btn btn-success btn-block" >OK</button>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Error modal HTML --}}
        <div id="accept-order-error-modal" class="modal fade">
            <div class="modal-dialog modal-confirm">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="icon-box">
                            <i class="material-icons">&#xE5CD;</i>
                        </div>				
                        <h4 class="modal-title w-100 .title"></h4>	
                    </div>
                    <div class="modal-body">
                        <p class="text-center .message"></p>
                    </div>
                    <div class="modal-footer">
                        <button id="error-modal-btn" class="btn btn-danger btn-block">OK</button>
                    </div>
                </div>
            </div>
        </div>

    <!--**********************************
        Content body end
    ***********************************-->


   
</div>
